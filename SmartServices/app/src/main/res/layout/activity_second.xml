<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/canteeninside"
    tools:context=".Second">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="@font/bowlby_one"
        android:letterSpacing="0.1"
        android:text="ADD ITEMS"
        android:textSize="25dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:transitionName="images"
                        android:id="@+id/img"
                        android:src="@drawable/din2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Its time for lunch"
                        android:textSize="25dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        />
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:transitionName="text1"

                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:transitionName="text2"
                        android:autoLink="phone"
                        android:layout_marginTop="20dp"
                        android:textSize="25dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        >
               <!--     <ImageButton
                        android:id="@+id/add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-black"
                        android:background="@drawable/ic_1237946"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"
                        android:textColor="#000"

                        android:id="@+id/count"
                        />
                    <ImageButton
                        android:id="@+id/del"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-black"
                        android:background="@drawable/ic_icons8_minus_24"
                        />-->
                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_button"
                            android:layout_width="200dp"
                            app:backGroundColor="@color/number"
                            app:textSize="8sp"
                            app:initialNumber="1"
                            android:layout_marginTop="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content" />
                      <!--  <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_button2"
                            android:layout_width="match_parent"
                            app:backGroundColor="@color/colorAccent"
                            app:textSize="8sp"
                            app:initialNumber="10"
                            app:finalNumber="20"
                            android:layout_marginTop="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/number_button"
                            android:layout_height="wrap_content" />-->
                    </LinearLayout>
                    <com.github.tonywills.loadingbutton.LoadingButton
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_margin="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_color"
                        android:layout_marginTop="45dp"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif-black"
                        app:buttonBackgroundTint="@color/blue"
                        app:loadingColor="@color/sunflower"
                        app:buttonText="Add to cart"
                        style="@style/Widget.AppCompat.Button.Colored" />

                </LinearLayout>

            </ScrollView>


    </LinearLayout>

</LinearLayout>